@model JamesThew.Models.Subscription

<h2>Your Subscription</h2>

@if (Model == null)
{
    <div class="alert alert-warning">No active subscription found.</div>
}
else
{
    <div class="card p-3">
        <p><strong>Plan:</strong> @Model.PlanName</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p><strong>Started:</strong> @Model.StartDate.ToShortDateString()</p>
        <p><strong>Expires:</strong> @Model.EndDate.ToShortDateString()</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["Success"]
        </div>
    }
}
